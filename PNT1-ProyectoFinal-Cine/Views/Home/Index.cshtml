using System.Linq;
@model IEnumerable<PNT1_ProyectoFinal_Cine.Models.Pelicula>
<!DOCTYPE html>
   
    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Index</title>
        <link type="text/css" rel="stylesheet" href="~/css/style.css" />
    </head>
    <body>
        <div class="container">
            <div class="main-title">
                <p class="into">Welcome to our Cupcakes Shop</p>
            </div>
            <div class="img-container">
                @foreach (var item in Model)
                {
                    <div class="photo-index-card">
                        <h3 class="display-picture-title">
                            "@Html.DisplayFor(modelItem => item.titulo)"
                        </h3>
                        @if (item.ImageName != null)
                        {
                            <div class="photo-display">
                                <img class="photo-display-img" src="@Url.Action("GetImage", "Pelicula", new { Id = item.PeliculaId })" />
                            </div>
                        }
                        <div>
                            <p class="display-label">
                                @Html.DisplayNameFor(model => item.pelicula.titulo)
                            </p>
                            <br />
                            <p class="display-field">
                            @Html.DisplayFor(model => item.pelicula.titulo)
                            </p>
                        </div>
                        <div>
                            <a asp-action="Edit" asp-route-id="@item.PeliculaId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.PeliculaId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.PeliculaId">Delete</a>
                        </div>
                    </div>
                }
            </div>
        </div>

    </body>
</html>
