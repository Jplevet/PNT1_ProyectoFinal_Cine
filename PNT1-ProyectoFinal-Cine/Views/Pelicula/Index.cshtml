@model IEnumerable<PNT1_ProyectoFinal_Cine.Models.Pelicula>

@{
    ViewData["Title"] = "Index";
}

<h1>Películas</h1>

<p>
    <a asp-action="Create">Crear película</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhotoPelicula)
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PeliculaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PeliculaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PeliculaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
